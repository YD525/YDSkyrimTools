<Window x:Class="YDSkyrimTools.EngineInFo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YDSkyrimTools"
        mc:Ignorable="d"
        Title="EngineInFo" Height="230" Width="600" WindowStartupLocation="CenterScreen" Closing="Window_Closing" Loaded="Window_Loaded" Topmost="True">
    <Grid Background="#FF424242">

        <Grid.RowDefinitions>
            <RowDefinition Height="5"/>
            <RowDefinition Height="38"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="Nav" Grid.Row="1">
            <StackPanel Orientation="Horizontal">
                <Label Background="#FF0F85B3" Padding="10 5 10 5" Foreground="White" Margin="5" VerticalContentAlignment="Center" Name="Languages">
                    本地单词词库
                </Label>
                <Label Background="#FF0F85B3" Padding="10 5 10 5" Foreground="White" Margin="5" VerticalContentAlignment="Center" Name="Conjunction">
                    本地连词词库
                </Label>
                <Label Background="#FF0F85B3" Padding="10 5 10 5" Foreground="White" Margin="5" VerticalContentAlignment="Center" Name="Div">
                   自定义Cache词库
                </Label>
            </StackPanel>
         
            
        </Grid>

        <Grid x:Name="MainFrame" Grid.Row="2" Background="#FF333333">

            <Grid VerticalAlignment="Center">

                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="90"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Grid.Row="0" Name="Currency">
                    
                    <Label Foreground="White" Margin="0 0 5 0" VerticalAlignment="Center">
                        类型:
                    </Label>
                    <ComboBox Width="80" Name="Type" Margin="0 5 5 5">
                    </ComboBox>

                    <Label Foreground="White" Margin="0 0 5 0" VerticalAlignment="Center">
                        目标语言类型:
                    </Label>
                    <ComboBox Width="80" Name="From" Margin="0 5 5 5">
                    </ComboBox>

                    <Label Foreground="White" Margin="0 0 5 0" VerticalAlignment="Center">
                        翻译语言类型:
                    </Label>
                    <ComboBox Width="80" Name="To" Margin="0 5 5 5">
                    </ComboBox>

                </StackPanel>

                <StackPanel Orientation="Vertical" Grid.Row="1" Name="ConjunctionSetting" Visibility="Visible" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <Label Foreground="White" Margin="0 0 5 0" VerticalAlignment="Center">
                            判断内容:
                        </Label>
                        <TextBox Width="100" Name="StrExist" Margin="0 5 5 5">
                        </TextBox>

                        <Label Foreground="White" Margin="0 0 5 0" VerticalAlignment="Center">
                            指定单词在前:
                        </Label>
                        <TextBox Width="100" Name="FrontExist" Margin="0 5 5 5">
                        </TextBox>

                        <Label Foreground="White" Margin="0 0 5 0" VerticalAlignment="Center">
                            指定单词在后:
                        </Label>
                        <TextBox Width="100" Name="BehindExist" Margin="0 5 5 5">
                        </TextBox>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">

                        <Label Foreground="White" Margin="0 0 5 0" VerticalAlignment="Center">
                            内容:
                        </Label>
                        <TextBox Width="100" Name="CText" Margin="0 5 5 5">
                        </TextBox>

                        <Label Foreground="White" Margin="0 0 5 0" VerticalAlignment="Center">
                            计算成功的值:
                        </Label>
                        <TextBox Width="100" Name="CResult" Margin="0 5 5 5">
                        </TextBox>

                        <Label Foreground="White" Margin="0 0 5 0" VerticalAlignment="Center">
                            失败值:
                        </Label>
                        <TextBox Width="100" Name="CDefaultResult" Margin="0 5 5 5">
                        </TextBox>

                        <CheckBox Name="IgnoreCase" Foreground="White" VerticalAlignment="Center">
                            忽略大小写
                        </CheckBox>

                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal">

                        <Label Foreground="White" Margin="0 0 5 0" VerticalAlignment="Center">
                            优先级:
                        </Label>
                        <TextBox Width="100" Name="TIndex" Margin="0 5 5 5">
                        </TextBox>

                        <Label Background="#FF0AA0DA" Foreground="White" MouseDown="AnyButtonClick" Tag="0" VerticalAlignment="Center">
                            添加到连词库
                        </Label>

                    </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Row="1" Name="LanguagesSetting" Visibility="Hidden" Height="35">
                    <Label Foreground="White" Margin="0 0 5 0" VerticalAlignment="Center">
                        内容:
                    </Label>
                    <TextBox Width="100" Name="Text" Margin="0 5 5 5">
                    </TextBox>


                    <Label Foreground="White" Margin="0 0 5 0" VerticalAlignment="Center">
                        结果:
                    </Label>
                    <TextBox Width="100" Name="Result" Margin="0 5 5 5">
                    </TextBox>

                    <Label Background="#FF0AA0DA" Padding="10 5 10 5" Foreground="White" Margin="5" MouseDown="AnyButtonClick" Tag="0">
                        添加到词库
                    </Label>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Row="1" Name="CacheSetting" Visibility="Hidden"  Height="35">
                    <Label Foreground="White" Margin="0 0 5 0" VerticalAlignment="Center">
                        最终值:
                    </Label>
                    <TextBox Width="100" Name="EndContent" Margin="0 5 5 5">
                    </TextBox>


                    <Label Foreground="White" Margin="0 0 5 0" VerticalAlignment="Center">
                        替换为:
                    </Label>
                    <TextBox Width="100" Name="TargetContent" Margin="0 5 5 5">
                    </TextBox>

                    <Label Background="#FF0AA0DA" Padding="10 5 10 5" Foreground="White" Margin="5" MouseDown="AnyButtonClick" Tag="0">
                        添加到缓存
                    </Label>
                </StackPanel>
            </Grid>

        </Grid>

    </Grid>
</Window>
