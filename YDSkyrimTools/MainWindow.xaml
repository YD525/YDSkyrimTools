<Window x:Class="YDSkyrimTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YDSkyrimTools"
        mc:Ignorable="d"
        Title="SkyrimTools" Height="900" Width="1000" Loaded="Window_Loaded" Closing="Window_Closing" WindowStartupLocation="CenterScreen" Closed="Window_Closed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Label Padding="10 0 10 0" Margin="2 0 0 0" Background="#FF017CB3" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MouseDown="SelectNav">
                对比Mod差异
            </Label>

            <Label Padding="10 0 10 0" Margin="2 0 0 0" Background="#FF017CB3" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MouseDown="SelectNav">
                Enb管理
            </Label>

            <Label Padding="10 0 10 0" Margin="2 0 0 0" Background="#FF6A6A6A" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MouseDown="SelectNav">
                前置预装
            </Label>

            <Label Padding="10 0 10 0" Margin="2 0 0 0" Background="#FF017CB3" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MouseDown="SelectNav">
                翻译核心
            </Label>

            <Label Padding="10 0 10 0" Margin="2 0 0 0" Background="#FF017CB3" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MouseDown="SelectNav">
                系统设定
            </Label>

            <Label Padding="10 0 10 0" Margin="2 0 0 0" Background="#FF017CB3" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MouseDown="SelectNav">
                关于作者
            </Label>

            <Label Padding="10 0 10 0" Margin="2 0 0 0"   HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MouseDown="SelectNav" Visibility="Visible">
                卷轴路径:
            </Label>
            

            <TextBox Name="SkyrimPath"  Width="450" Margin="5" VerticalContentAlignment="Center" Visibility="Visible">
            </TextBox>

        </StackPanel>

        

        <Grid Grid.Row="1" Margin="5" Visibility="Hidden" Name="CheckModView">
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            
            <StackPanel Orientation="Horizontal" Grid.Row="0">

                <Label Padding="10 0 10 0" Margin="2 0 0 0"   HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MouseDown="SelectNav">
                    备份路径:
                </Label>
                
                <TextBox Name="APath" Width="220" Margin="5" VerticalContentAlignment="Center">
                  
                </TextBox>

                <Label Padding="10 0 10 0" Margin="2 0 0 0"   HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MouseDown="SelectNav">
                    源路径:
                </Label>
                
                <TextBox Name="BPath"  Width="220" Margin="5" VerticalContentAlignment="Center">
                  
                </TextBox>

                <Label Padding="10 0 10 0" Margin="2 5 0 5" Background="#FF00831F" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MouseDown="SelectNav">
                    对比
                </Label>


            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Row="1">

                <Label Padding="10 0 10 0" Margin="2 0 0 0"   HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MouseDown="SelectNav">
                    进度:
                </Label>

                <ProgressBar Name="ComparePercent" Width="900" Margin="5" Foreground="#FF0671B0" OpacityMask="#FF0691D9">
                </ProgressBar>


            </StackPanel>

            <ListBox Name="ModCheckReport" Grid.Row="2">
            </ListBox>
        </Grid>

        <Grid Grid.Row="1" Margin="5" Visibility="Hidden" Name="EnbManagementView">
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="35"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Row="0">

                <Label VerticalAlignment="Center" Margin="2 0 0 0">
                    以安装Enb:
                </Label>
                
                <ComboBox Name="Enbs" Width="100" Margin="2 5 0 5" VerticalContentAlignment="Center">
                </ComboBox>
                
                <Label Padding="10 0 10 0" Margin="2 5 0 5" Background="#FF00831F" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MouseDown="SelectNav">
                    安装
                </Label>

                <Label Padding="10 0 10 0" Margin="2 5 0 5" Background="#FF00831F" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MouseDown="SelectNav">
                    编辑
                </Label>

                <Label Padding="10 0 10 0" Margin="2 5 0 5" Background="#FFBB0000" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MouseDown="SelectNav">
                    卸载
                </Label>

                <Label VerticalAlignment="Center" Margin="2 0 0 0">
                    导入新的Enb:
                </Label>

                <TextBox Name="EnbPath" Width="300" Margin="5" VerticalContentAlignment="Center">
                   
                </TextBox>
                
                <Label Padding="10 0 10 0" Margin="2 5 0 5" Background="#FF00831F" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MouseDown="SelectNav">
                    ...
                </Label>

                <Label Padding="10 0 10 0" Margin="2 5 0 5" Background="#FF00831F" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MouseDown="SelectNav">
                    导入
                </Label>
            </StackPanel>
            
            <ListBox Name="AnyMsgL" Grid.Row="1">
            </ListBox>

            <Label Grid.Row="2" Foreground="Red">
                下载的Enb 如果是压缩包格式的请新建一个文件夹然后手动解压到这个文件 在导入里选择这个文件夹即可导入
            </Label>

        </Grid>


        <Grid Grid.Row="1" Margin="5" Visibility="Hidden" Name="TranslateView">
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="0.1*"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="0.3*"/>
                <RowDefinition Height="35"/>
            </Grid.RowDefinitions>
            
            <Label Foreground="Black" Grid.Row="0" VerticalAlignment="Center" FontWeight="Bold">
                源文件翻译
            </Label>

            <StackPanel Orientation="Horizontal" Grid.Row="1">

                <Label VerticalAlignment="Center" Margin="2 0 0 0">
                    当前翻译进度:
                </Label>

                <ProgressBar Name="TranslatePercent" Width="230" Margin="5" Foreground="#FF0671B0" OpacityMask="#FF0691D9">
                </ProgressBar>
                
                <Label Padding="10 0 10 0" Margin="5"  Foreground="Black" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MouseDown="SelectNav">
                    翻译类型
                </Label>

                <ComboBox Name="TranslateType" Margin="5" Width="100" VerticalContentAlignment="Center">
                </ComboBox>

                <Label Padding="10 0 10 0" Margin="5" Background="#FF00B0FF" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MouseDown="SelectNav">
                    选择翻译
                </Label>
                <Label Padding="10 0 10 0" Margin="5" Background="#FF00B0FF" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MouseDown="SelectNav">
                    终止翻译
                </Label>
                <Label Padding="10 0 10 0" Margin="5" Background="#FF00B0FF" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MouseDown="SelectNav">
                    配置百度API
                </Label>
                <Label Padding="10 0 10 0" Margin="5" Background="#FF00B0FF" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MouseDown="SelectNav">
                    引擎控制
                </Label>
            </StackPanel>

            <Grid Name="TranslateMsg" Grid.Row="2">
            </Grid>

            <Label Foreground="Black"  VerticalAlignment="Center" FontWeight="Bold"  Grid.Row="3">
                TxT翻译结果单击文本复制
            </Label>

            <TextBox Grid.Row="4" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" Name="SucessText" PreviewMouseDown="TextBox_PreviewMouseDown">
            </TextBox>

            <Label Foreground="Black" Grid.Row="5" VerticalAlignment="Center" FontWeight="Bold">
                交互式翻译
            </Label>
            
            <Grid Grid.Row="6" Background="#FF3A3A3A">
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal" Margin="5 3 5 3">
                        <Label Foreground="White">
                            xTranslator 自动监听:
                        </Label>
                        <Label  Foreground= "Red" Name="CurrentState">
                            未启动
                        </Label>
                        <Label Foreground="White">
                            目标控件内数据:
                        </Label>
                        <Label  Foreground= "#FF049517" Name="CurrentData">
                            未应用
                        </Label>
                        <Label Foreground="White">
                            交互式翻译:
                        </Label>
                        <Label  Foreground= "#FF049517">
                            自动
                        </Label>
                        <Label Padding="10 0 10 0" Margin="5" Background="#FF00B0FF" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MouseDown="SelectNav">
                            暂时停止
                        </Label>
                        <Label Padding="10 0 10 0" Margin="5" Background="#FF00B0FF" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MouseDown="SelectNav">
                            恢复交互
                        </Label>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="5 3 5 3">
                        <Label Foreground="White">
                            手动翻译:
                        </Label>
                        <Label Padding="10 0 10 0" Margin="5" Background="#FF00B0FF" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MouseDown="SelectNav" Height="25">
                            获取剪切板内容
                        </Label>
                        <TextBox Name="FromText" Width="230" Margin="5" AcceptsReturn="True" TextWrapping="Wrap" Height="80">
                        </TextBox>
                        <Label Padding="10 0 10 0" Margin="5" Background="#FF00B0FF" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MouseDown="SelectNav" Height="25">
                            手动翻译
                        </Label>
                        <TextBox Name="ToText" Width="230" Margin="5" AcceptsReturn="True" TextWrapping="Wrap"  Height="80">
                        </TextBox>
                    </StackPanel>
                </StackPanel>
            </Grid>
            <Label Foreground="Red" Grid.Row="7" VerticalAlignment="Center">
                确保填对百度翻译API 务必要申请高级版, 注意如果申请的百度Api 不是高级版(100w) 而是普通版(5w) 超过词数后 翻车不怪我！
            </Label>

        </Grid>
    </Grid>
</Window>
