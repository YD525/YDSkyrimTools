<Window x:Class="YDSkyrimTools.HistoryTool"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wpflib="clr-namespace:BLCTClassLibrary.WpfLib;assembly=BLCTClassLibrary.WpfLib"
        xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
        xmlns:local="clr-namespace:YDSkyrimTools"
        mc:Ignorable="d"
        Title="HistoryTool" Height="250" Width="900" Loaded="Window_Loaded" ShowInTaskbar="False">


    <Window.Style>
        <Style TargetType="Window">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="WindowStyle" Value="None" />
            <Setter Property="ResizeMode" Value="CanResize" />
            <Setter Property="AllowsTransparency" Value="True" />
            <Setter Property="WindowChrome.WindowChrome">
                <Setter.Value>
                    <WindowChrome CaptionHeight="1" ResizeBorderThickness="15 0 15 15"/>
                </Setter.Value>
            </Setter>
        </Style>
        <!--进度条样式-->
    </Window.Style>

    <Grid>
        <Grid Background="Black" Opacity="0.1" Name="BackGroundLayer" MouseEnter="Grid_MouseEnter" MouseLeave="Grid_MouseLeave"  MouseLeftButtonDown="WinHead_MouseLeftButtonDown">
        </Grid>

        <Grid MouseLeftButtonDown = "WinHead_MouseLeftButtonDown"> 
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Border Background="Black" CornerRadius="8" Width="30" MouseEnter="Grid_MouseEnter" MouseLeave="Grid_MouseLeave" HorizontalAlignment="Right" Margin="0 0 10 0" Name="TopControl" Cursor="Hand" PreviewMouseDown="AutoLock">
                <svgc:SvgViewbox HorizontalAlignment="Center" Name="AutoLocker" Stretch="Fill" Width="13" Panel.ZIndex="900" Height="15"  ToolTip="锁定/解锁"   Opacity="1" />
            </Border>
            
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled"  Grid.Row="0" Grid.RowSpan="2" Margin="25 50 25 0" Name="Content" MouseEnter="ScrollMouseEnter" MouseLeave="ScrollMouseLeave">
                <StackPanel Orientation="Vertical"  HorizontalAlignment="Center" VerticalAlignment="Center" Name="TextBody">
               

             


                </StackPanel>
            </ScrollViewer>



        </Grid>
    </Grid>
</Window>
